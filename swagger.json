                                        "cep": "00000-000",
                                        "cidade": "cidade",
                                        "cnpj": "00.000.000/0000-03",
                                        "email": "email@email.com",
                                        "estado": "SP",
                                        "name": "nome do fornecedor",
                                        "numero": 1,
                                        "rua": "rua",
                                        "telefone": "(99) 9 9999-9999"

    "paths": {
        "/health": {
            "get": {
                "summary": "Teste da aplicação",
                "description": "Essa rota realiza teste da aplicação",
                "tags": [
                    "Health"
                ],
                "responses": {
                    "200": {
                        "description": "ok"
                    }
                }
            }
        },
        "/contato": {
            "post": {
                "summary": "Formulário de contato",
                "description": "Essa rota realiza envio de mensagem para o administrador",
                "tags": [
                    "Formulário de contato"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/form"
                            },
                            "examples": {
                                "usuário": {
                                    "value": {
                                        "msg": "mensagem",
                                        "name": "nome",
                                        "email": "email@email.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Não foi possível enviar"
                    },
                    "200": {
                        "description": "Formulário enviado com sucesso"
                    }
                }
            }
        },
        "/auth/createUser": {
            "post": {
                "summary": "Cadastro de Usuário",
                "description": "Essa rota realiza o cadstro de usuário pelo próprio usuário",
                "tags": [
                    "Autenticação"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/users"
                            },
                            "examples": {
                                "create user": {
                                    "value": {
                                        "email": "email@email.com",
                                        "name": "nome",
                                        "password": "senha",
                                        "validPass": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Não foi possivel criar"
                    },
                    "412": {
                        "description": "Usuário já existe"
                    },
                    "200": {
                        "description": "Usuário criado"
                    }
                }
            }
        },
        "/auth/authenticate": {
            "post": {
                "summary": "Autenticação de usuário",
                "description": "Essa rota realiza autenticação do usuário",
                "tags": [
                    "Autenticação"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/users"
                            },
                            "examples": {
                                "usuário": {
                                    "value": {
                                        "email": "rasolive",
                                        "password": "0532291"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Usuário não encintrado no banco de dados"
                    },
                    "401": {
                        "description": "Senha incorreta"
                    },
                    "200": {
                        "description": "Usuário Autenticado"
                    }
                }
            }
        },
        "/email/forgotPassword": {
            "post": {
                "summary": "Reset de senha",
                "description": "Essa rota realiza o envio de uma nova senha por e-mail",
                "tags": [
                    "Autenticação"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/users"
                            },
                            "examples": {
                                "send e-mail": {
                                    "value": {
                                        "email": "email@email.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Usuário não encintrado no banco de dados"
                    },
                    "200": {
                        "description": "e-mail enviado"
                    }
                }
            }
        },
